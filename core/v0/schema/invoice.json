{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/invoice.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Invoice of an order",
    "type": "object",
    "properties": {
        "id" : {
            "type" : "string"
        },
        "type" : {
            "type" :"string",
            "enum": ["PROFORMA", "DRAFT", "COMMERCIAL"]
        },
        "date" : {
            "type" : "string",
            "format": "date"
        },
        "billing" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/billing.json"
        },
        "signatory" : {
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/person.json"
        },
        "tax_number" : {
            "type" : "string"
        },
        "order_id" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/order.json#/properties/id"
        },
        "payment" : {
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/payment.json"
        },
        "breakup" : {
            "type" : "array",
            "items" : {
                "type" : "object",
                "properties": {
                    "item_id" : {
                        "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/item.json#/properties/id"
                    },
                    "offer_id" : {
                        "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/offer.json#/properties/id"
                    },
                    "quantity" : {
                        "type" : "integer",
                        "minimum": 1
                    },
                    "amount" : {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/monetary_value.json"
                    }
                }
            }
        },
        "descriptor" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/descriptor.json"
        },
        "created_at" : {
            "type" : "string",
            "format": "date-time"
        },
        "updated_at" : {
            "type" : "string",
            "format": "date-time"
        }
    }
}