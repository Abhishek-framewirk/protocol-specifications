{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/offer.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes an offer",
    "type": "object",
    "properties": {
        "id": {
            "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/offer.json#/properties/id",
            "type": "string"
        },
        "descriptor": {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/descriptor.json"
        },
        "applies_to": {
            "type": "object",
            "description": "",
            "properties": {
                "scope": {
                    "type": "string",
                    "enum": [
                        "SERVICE",
                        "CATEGORY",
                        "ITEM"
                    ],
                    "description": "This can be extended by domain beyond the SERVICE, CATEGORY and ITEM"
                },
                "ids": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/service.json#/properties/id"
                            },
                            {
                                "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/category.json#/properties/id"
                            },
                            {
                                "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2201373b28084e9b3d38fbc546edf24ac99d0753/core/v0/schema/item.json#/properties/id"
                            }
                        ]
                    }
                }
            }
        },
        "start_date": {
            "type": "string",
            "format": "date-time"
        },
        "end_date": {
            "type": "string",
            "format": "date-time"
        }
    }
}