{
    "$id": "person.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes a person. Extension not allowed",
    "type": "object",
    "properties": {
        "type" : {
            "type" : "string",
            "enum": ["person", "org"]
        },
        "name" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/name.json"
        },
        "image": {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/image.json"
        },
        "dob": {
            "type": "string",
            "format": "date"
        },
        "works_for" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-v0.9.0/core/v0/schema/person.json"
        },
        "gender": {
            "type": "string",
            "description": "Gender of something, typically a Person, but possibly also fictional characters, animals, etc. While Male and Female may be used, text strings are also acceptable for people who do not identify as a binary gender"
        },
        "email" : {
            "type": "string",
            "format": "email"
        },
        "phones": {
            "type": "array",
            "items" : {
                "type": "string",
                "description": "Phone numer in E.164 format (ITUT recommendation)"
            }
        }
    }
}