{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/payment_endpoint.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes where a payment is happening from or to",
    "type": "object",
    "properties": {
        "type" : {
            "type" : "string",
            "enum": [ "bank_account", "vpa", "person" ]
        },
        "bank_account" : {
            "type" : "object",
            "properties": {
                "account_number" : {
                    "type" : "string"
                },
                "account_holder_name" : {
                    "type" : "string"
                },
                "ifsc_code" : {
                    "type" : "string"
                }
            }
        },
        "vpa" : {
            "type" : "string",
            "description": "Virtual Payment Address like a UPI address"
        },
        "person" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/person.json"
        }
    }
}