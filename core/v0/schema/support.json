{
    "$id": "support.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Customer support of a service",
    "type": "object",
    "properties": {
        "service_id": {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/service.json#/properties/id"
        },
        "order": {
            "type" : "object",
            "properties": {
                "id" : {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/order.json#/properties/id"
                }
            },
            "order_items" : {
                "type" : "array",
                "items": {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/item.json#/properties/id"
                }
            }
        },
        "communication"  : {
            "type" : "object",
            "properties" : {
                "chat" : {
                    "type" : "object"
                },
                "callback" : {
                    "type" : "object"
                },
                "call" : {
                    "type" : "object"
                },
                "email" : {
                    "type" : "object"
                }
            }
        }
    }
}