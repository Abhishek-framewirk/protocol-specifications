{
    "$id": "billing.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes a billing event",
    "type": "object",
    "properties": {
        "name" : {
            "type" : "string"
        },
        "customer" : {
            "describtion" : "Personal details of the customer needed for billing.",
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/person.json"
        },
        "address" : {
            "description": "Location where the bill is to be sent to",
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/address.json"
        },  
        "period" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/core-0.9.0/core/v0/schema/duration.json"
        },
        "tax_number" : {
            "type" : "string"
        }
    }
}