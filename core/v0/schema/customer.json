{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/customer.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.2",
    "description": "Describes the customer",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "SINGLE",
                "GROUP"
            ]
        },
        "individual": {
            "type": "object",
            "properties": {
                "info": {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/ca4726871b03017913f4a1803e0b4ec0169ba7a7/core/v0/schema/person.json"
                }
            }
        },
        "group": {
            "type": "object",
            "properties": {
                "primary": {
                    "info": {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/ca4726871b03017913f4a1803e0b4ec0169ba7a7/core/v0/schema/person.json"
                    }
                },
                "count": {
                    "type": "integer",
                    "minimum": 1
                }
            }
        }
    }
}