{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/customer.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes the customer",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "SINGLE",
                "GROUP"
            ]
        },
        "individual": {
            "type": "object",
            "properties": {
                "info": {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/f1cae681d8d256d228d4e725fe451a767ab9b618/core/v0/schema/person.json"
                }
            }
        },
        "group": {
            "type": "object",
            "properties": {
                "primary": {
                    "info": {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/f1cae681d8d256d228d4e725fe451a767ab9b618/core/v0/schema/person.json"
                    }
                },
                "count": {
                    "type": "integer",
                    "minimum": 1
                }
            }
        }
    }
}