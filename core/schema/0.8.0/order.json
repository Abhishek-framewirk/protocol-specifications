{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/order.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes the details of a service order",
    "type": "object",
    "properties": {
        "id" : {
            "type" : "string"
        },
        "states": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/state.json"
            }
        },
        "billing" : {
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/billing.json"
        },
        "fulfillment" : {
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/fulfillment.json"
        },
        "items" : {
            "type" : "array",
            "items" : {
                "id" : {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/item.json#/properties/id"
                },
                "quantity" : {
                    "type" : "integer",
                    "minimum" : 1
                }
            }
        },
        "created_at" : {
            "type" : "string",
            "format" : "date-time"
        }
    }
}