{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/payment.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes a payment",
    "type": "object",
    "properties": {
        "transaction_id" : {
            "type" : "string"
        },
        "payer" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/person.json"
        },
        "value" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/monetary_value.json"
        },
        "method" : {
            "type" : "string"
        },
        "status" : {
            "type" : "string"
        },
        "due_date" : {
            "type" : "string",
            "format": "date-time"
        },
        "scheduled_date" : {
            "type" : "string",
            "format": "date-time"
        },
        "endpoint" : {
            "type" : "object",
            "properties" : {
                "form" : {
                    "type" : "string"
                },
                "bank_account" : {
                    "type" : "string"
                },
                "vpa" : {
                    "type" : "string"
                }
            }
        }
    }
}