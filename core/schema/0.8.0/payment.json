{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/payment.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes a payment",
    "type": "object",
    "properties": {
        "transaction_id" : {
            "type" : "string"
        },
        "amount" : {
            "type" : "object",
            "properties": {
                "currency" : {
                    "type" : "string"
                },
                "integral" : {
                    "type" : "string"
                },
                "fractional" : {
                    "type" : "string"
                }
            }
        },
        "timestamp" : {
            "type" : "string",
            "format" : "date-time"
        }
    }
}