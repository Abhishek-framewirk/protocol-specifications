{
    "$id": "https://developers.beckn.org/food-and-beverage/schema/0.7.1/customer.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version" : "0.7.1",
    "description": "Describes the customer of a kitchen",
    "type": "object",
    "properties": {
        "type" : {
            "type" : "string",
            "enum" : ["SINGLE", "GROUP"]
        },
        "single" : {
            "type" : "object",
            "properties" : {
                "info" : {
                    "$ref" : "https://developers.beckn.org/core/schema/0.7.1/person.json"
                }
            }
        },
        "group" : {
            "type" : "object",
            "properties" : {
                "primary" : {
                    "info" : {
                        "$ref" : "https://developers.beckn.org/core/schema/0.7.1/person.json"
                    }
                },
                "count": {
                    "type" : "integer",
                    "minimum" : 1
                }
            }
        }
    }
}