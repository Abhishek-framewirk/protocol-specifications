{
    "$id": "https://schema.beckn.org/core/schema/0.7.1/item.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version" : "0.7.1",
    "description": "Describes a catalog item. Allows for domain extension.",
    "type": "object",
    "properties": {
        "id" : {
            "type" : "string"
        },
        "name" : {
            "type" : "string"
        },
        "description" : {
            "type" : "string"
        },
        "image" : {
            "$ref" : "https://schema.beckn.org/core/schema/0.7.1/image.json"
        },
        "price" : {
            "$ref" : "https://schema.beckn.org/core/schema/0.7.1/price.json"
        },
        "primary" : {
            "type" : "boolean"
        },
        "selected" : {
            "type" : "boolean"
        },
        "quantity" : {
            "type" : "integer",
            "minimum": 0
        },
        "policy" : {
            "$ref" : "https://schema.beckn.org/core/schema/0.7.1/policy.json"
        },
        "category_id" : {
            "type" : "string"
        },
        "tags" : {
            "type" : "array",
            "items" : {
                "type" : "string"
            } 
        }
    }
}