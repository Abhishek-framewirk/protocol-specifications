{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/final-mile-delivery/v0/schema/fmd_order.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes an FMD order",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2dcec8f395633148f8c91c46a9ca0a3e14bd6870/core/v0/schema/order.json"
        },
        {
            "properties": {
                "type" : {
                    "type" : "string",
                    "description": "Defines the type of order like a simple order, a return order, an internal order etc. The types of orders supported will be defined by the network ecosystem."
                },
                "prev_order_id" : {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2dcec8f395633148f8c91c46a9ca0a3e14bd6870/core/v0/schema/order.json#/properties/id"
                },
                "return_reason_id" : {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2dcec8f395633148f8c91c46a9ca0a3e14bd6870/core/v0/schema/option.json#/properties/id"
                },
                "tasks" : {
                    "type" : "array",
                    "items": {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/final-mile-delivery/v0/schema/fmd_task.json"
                    }
                },
                "cancellation_reasons" : {
                    "type" : "array",
                    "items" : {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2dcec8f395633148f8c91c46a9ca0a3e14bd6870/core/v0/schema/option.json"
                    }
                },
                "return_reasons" : {
                    "type" : "array",
                    "items" : {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/2dcec8f395633148f8c91c46a9ca0a3e14bd6870/core/v0/schema/option.json"
                    }
                }
            }
        }
    ]    
}    