{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/final-mile-delivery/v0/schema/fmd_service.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version": "0.8.0",
    "description": "Describes an FMD service",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/0.8.0/service.json"
        },
        {
            "properties": {
                "catalog": {
                    "allOf": [
                        {
                            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/0.8.0/catalog.json"
                        },
                        {
                            "properties": {
                                "package_categories" : {
                                    "type": "array",
                                    "items": {
                                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/v0/schema/0.8.0/category.json"
                                    }
                                },
                                "paradigms": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/final-mile-delivery/v0/schema/fmd_paradigm.json"
                                    }
                                }
                            },
                            "required": ["categories", "paradigms", "package_categories"]
                        }
                    ]
                }
            },
            "required": ["categories"]
        },
        {
            "required": ["provider", "catalog"]
        }
    ]
}