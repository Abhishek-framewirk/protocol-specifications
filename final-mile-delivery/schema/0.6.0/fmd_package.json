{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/final-mile-delivery/schema/0.6.0/package.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version" : "0.6.0",
    "description": "Describes the package object",
    "type": "object",
    "properties": {
        "id" : {
            "type" : "string"
        },
        "descriptor" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/descriptor.json"
        },
        "category" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/category.json"
        },
        "contents" : {
            "type" : "array",
            "items" : {
                "allOf" : [
                    {
                        "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/item.json"
                    },
                    {
                        "properties": {
                            "quantity" : {
                                "type" : "integer",
                                "minimum": 1
                            }
                        }
                    }
                ]
            }
        },
        "price_range" : {
            "type" : "object",
            "properties": {
                "min" : {
                    "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.7.1/price.json"
                },
                "max" : {
                    "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.7.1/price.json"
                }
            }
        },
        "weight_range": {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.7.1/scalar_range.json"
        },
        "dimensions": {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/dimensions.json"
        }
    }
}    