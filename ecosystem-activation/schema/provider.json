{
    "$id": "https://schema.beckn.org/ecosystem-activation/schema/gateway.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version" : "0.7.1",
    "description": "Describes a Beckn Gateway",
    "type" : "object",
    "properties" : {
        "name" : {
            "type" : "string"
        },
        "supported_domains" : {
            "type" : "array",
            "items" : {
                "$ref" : "http://schema.beckn.org/core/schema/0.7.1/domain.json"
            }
        },
        "base_url" : {
            "type" : "string"
        },
        "documents" : {
            "type" : "array",
            "items" : {
                "type" : "object",
                "properties" : {
                    "title" : {
                        "type" : "string"
                    },
                    "data" : {
                        "type" : "string"
                    }
                }
            }
        },
        "public_key" : {
            "type" : "string"
        }        
    }
}