{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/schema/0.8.0/route.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version" : "0.7.1",
    "description": "Describes the route of a trip",
    "type": "object",
    "properties" : {
        "edge" : {
            "type" : "object",
            "properties" : {
                "path" : {
                    "type" : "string"
                },
                "duration" : {
                    "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/scalar.json"
                },
                "distance" : {
                    "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/core/schema/0.8.0/scalar.json" 
                },
                "stops" : {
                    "type" : "array",
                    "items" : {
                        "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/schema/0.8.0/stop.json"
                    }
                }
            }
        }
    }
}