{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/schema/0.8.0/mobility_tracking.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "version" : "0.8.0",
    "description": "Describes the tracking object",
    "type": "object",
    "properties" : {
        "method" : {
            "type" : "string",
            "enum" : ["pull", "push"]
        },
        "state" : {
            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/f1cae681d8d256d228d4e725fe451a767ab9b618/core/v0/schema/state.json"
        },
        "order" : {
            "type": "object",
            "properties": {
                "id" : {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/v0/schema/mobility_order.json#/properties/id"
                }
            }
        },
        "pull" : {
            "type" : "object",
            "properties" : {
                "url_type" : {
                    "type": "string",
                    "enum": ["embed", "api"]
                },
                "url" : {
                    "type" : "string",
                    "format": "uri"
                }
            }
        },
        "push" : {
            "type" : "object",
            "properties" : {
                "url" : {
                    "type" : "string",
                    "format": "uri"
                }
            }
        }
    }
}    