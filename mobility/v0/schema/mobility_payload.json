{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/v0/schema/mobility_payload.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes the payload of a trip",
    "type": "object",
    "properties" : {
        "luggage" : {
            "type" : "object",
            "properties": {
                "count" : {
                    "type" : "integer",
                    "minimum": 0
                },
                "weight": {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/f1cae681d8d256d228d4e725fe451a767ab9b618/core/v0/schema/scalar.json"
                },
                "dimensions": {
                    "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/f1cae681d8d256d228d4e725fe451a767ab9b618/core/v0/schema/dimensions.json"
                }
            }
        },
        "traveller_count" : {
            "type" : "integer",
            "minimum": 1
        },
        "travellers": {
            "description": "Details of travellers on this trip",
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/v0/schema/mobility_traveller.json"
            }
        },
        "travel_group": {
            "$ref" : "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/v0/schema/mobility_travel_group.json"
        }
    }
}