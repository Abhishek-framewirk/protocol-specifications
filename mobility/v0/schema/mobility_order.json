                        },
                        "refund" : {
                            "$ref": "https://raw.githubusercontent.com/beckn/protocol-specifications/89e04f8ffbe3ec22f1673edd3af6ca6d7da9cbc5/core/v0/schema/monetary_value.json"
                        },
                        "cancel_by" : {
                            "type" : "string",
                            "format" : "date-time"
