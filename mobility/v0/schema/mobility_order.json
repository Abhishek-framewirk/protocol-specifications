{
    "$id": "https://raw.githubusercontent.com/beckn/protocol-specifications/master/mobility/v0/schema/mobility_order.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Describes a mobility order",
    "allOf": [
